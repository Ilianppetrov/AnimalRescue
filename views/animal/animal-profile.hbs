{{# if data}}
<div class="profile-container">
  <div class="row">
    <div class="col-xs-12 col-md-6 animalProfile">
      <img class="img-responsive animal-image" src="/{{data.imagePath}}" alt="">
    </div>
    <div class="col-xs-12 col-md-6">
      <p>name: {{data.name}}</p>
      <p>Age: {{data.years}} years {{data.months}} months old</p>
      <p>Description: {{data.description}}</p>
    </div>
    {{# if notOwner}} {{# if login}}
    <form action="/message/send/{{data._id}}">
      <button class="btn btn-primary">Send</button>
    </form>
    {{/if}} {{/if}}
  </div>
  {{# if data.images}}
  <div class="row images-selector">
    <div class="col-md-3 col-md-offset-5 btn btn-primary show-more-images">Show more images</div>
  </div>
  <div class="profile-images">
    <div class="row">
      {{# each data.images}}
      <div class="col-xs-12 col-md-4">
        <span href="#" class="thumbnail hoover index-image-containter">
          <img src="/{{this}}" alt="..." class="img-responsive">
        </span>
      </div>
      {{/each}}
    </div>
  </div>
</div>
<div class="selected">
  <div class="previous-image">
    <img src="#" alt="">
  </div>
  <div class="current-image">
    <img src="#" id="current-image" />
  </div>
  <div class="next-image">
    <img src="#" alt="">
  </div>
  </ul>
  {{/if}} {{/if}}